<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agenda.paginas.exclusao"
             BackgroundImageSource="fundo.png">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="lixo.png" HorizontalOptions="CenterAndExpand" 
                       HeightRequest="400" VerticalOptions="Center" />
            <Label Text="Exclusão de Alunos da Agenda" FontFamily="Times new roman" HorizontalOptions="CenterAndExpand"
                FontSize="Header"
                TextColor="Black"/>
            
            <Entry x:Name="txt_id" Placeholder="Digite o ID:" HorizontalOptions="CenterAndExpand" WidthRequest="500"/>
            <Button Text="Excluir" x:Name="btn_excluir" FontSize="Medium"
                TextColor="Black" 
                HorizontalOptions="CenterAndExpand" CornerRadius="20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>